CREATE DATABASE  IF NOT EXISTS `PokeDex`;

USE `pokedex`;

CREATE TABLE PokeDex (
	ID_Pokemon INT PRIMARY KEY AUTO_INCREMENT,
    Poke_Name VARCHAR(60) NOT NULL
);

CREATE TABLE Abilities (
	ID_Abilities INT PRIMARY KEY NOT NULL,
	abilities_name	VARCHAR(60) NOT NULL,
	ability_1	SMALLINT,
	ability_2	SMALLINT,
	ability_hidden	SMALLINT,
    ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE Categories (
	ID_Category	INT PRIMARY KEY NOT NULL,
	Evolution_number INT,
    ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE EggTypes (
	ID_EggTypes	INT PRIMARY KEY NOT NULL,
	egg_type_number	TINYINT NOT NULL,
	egg_type_1	VARCHAR(25),
	egg_type_2	VARCHAR(25),
	percentage_male	FLOAT,
	egg_cycles	INT,
	ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE GoType (
	against_normal	TINYINT,
	against_fire	TINYINT,
	against_water	TINYINT,
	against_electri	TINYINT,
	against_grass	TINYINT,
	against_ice	TINYINT,
	against_fight	TINYINT,
	against_poison	TINYINT,
	against_ground	TINYINT,
	against_flying	TINYINT,
	against_psychic	TINYINT,
	against_bug	TINYINT,
	against_rock	TINYINT,
	against_ghost	TINYINT,
	against_dragon	TINYINT,
	against_dark	TINYINT,
	against_steel	TINYINT,
	against_fairy	tinyint,
	ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE Points (
	total_points INT,
	hp	INT,
	attack	INT,
	defense	INT,
	sp_attack	INT,
	sp_defense	INT,
	speed	INT,
	catch_rate	INT,
	base_friendship	INT,
	base_experience	INT,
	ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE Statuses (
	ID_Status	INT PRIMARY KEY NOT NULL,
	generation	INT,
	Status	TINYINT,
    species	INT,
	height_m	FLOAT,
	weight_kg	FLOAT,
	growth_rate	VARCHAR(25),
	ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);

CREATE TABLE Types (
	ID_Types	INT PRIMARY KEY NOT NULL,
	type_number	TINYINT,
	type_1	TINYINT,
	type_2	TINYINT,
	ID_Pokemon INT,
    FOREIGN KEY (ID_Pokemon) REFERENCES PokeDex(ID_Pokemon)
);
